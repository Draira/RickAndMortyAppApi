<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="@drawable/appearance_model">

    <!-- TODO add text to string.xml-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/appearance_model3"
        android:layout_weight="1">

        <TextView
            android:id="@+id/id_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:text="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="@drawable/appearance_model2"
        android:padding="15dp">

        <TextView
            android:id="@+id/name_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/almost_white"
            android:text="Name"/>



    </LinearLayout>


</LinearLayout>

